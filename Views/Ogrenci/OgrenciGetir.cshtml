@model OgrenciNotMvc.Models.EntityFramework.TBLOGRENCILER

@{
    ViewBag.Title = "OgrenciGetir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Guncelle", "Ogrenci", FormMethod.Post))
{
    @Html.HiddenFor(m => m.OGRENCIID)

    <div class="form-group">
        <label>Yeni Öğrenci Adı</label>
    </div>
    <div>
        @Html.TextBoxFor(m => m.OGRAD, new { @class = "form-control" })
    </div>
    <div style="margin-top:20px" class="form-group">
        <label>Yeni Öğrenci Soyadı</label>
    </div>
    <div>
        @Html.TextBoxFor(m => m.OGRSOYAD, new { @class = "form-control" })
    </div>
    <div style="margin-top:20px" class="form-group">
        <label>Yeni Öğrenci Fotosu</label>
    </div>
    <div>
        @Html.TextBoxFor(m => m.OGRFOTO, new { @class = "form-control" })
    </div>
    <div style="margin-top:20px" class="form-group">
        <label>Cinsiyet</label>
    </div>
    <div class="form-check">
        @Html.RadioButtonFor(m => m.OGRCINSIYET, "Erkek", new { @class = "form-check-input", id = "erkek" })
        <label class="form-check-label" for="erkek">Erkek</label>
    </div>

    <div class="form-check">
        @Html.RadioButtonFor(m => m.OGRCINSIYET, "Kadın", new { @class = "form-check-input", id = "kadin" })
        <label class="form-check-label" for="kadin">Kadın</label>
    </div>

    <div style="margin-top:20px" class="form-group">
        <label>Yeni Öğrenci Kulübü</label>
    </div>
    <div>
        @Html.DropDownListFor(m => m.OGRKULUP, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <button type="button" class="btn btn-outline-dark" onclick="GuncelleOnay()">
            Güncelle
        </button>
        <input type="hidden" id="islemInput" />
    </div>

}

<div class="modal fade" id="guncelleModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header bg-warning">
                <h4 class="modal-title">Güncelleme Onayı</h4>
            </div>

            <div class="modal-body">
                <p>Bu notu güncellemek istediğine emin misin?</p>
            </div>

            <div class="modal-footer">
                <button class="btn btn-secondary" data-dismiss="modal">İptal</button>
                <button class="btn btn-success" onclick="FormuGonder()">Evet, Güncelle</button>
            </div>

        </div>
    </div>
</div>


<script>
    function GuncelleOnay() {
        $("#guncelleModal").modal("show");
    }

    function FormuGonder() {
        document.getElementById("islemInput").value = "Guncelle";
        $("form").submit();
    }
</script>